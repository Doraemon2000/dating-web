<h1>code test bitches</h1>

<% @questions.each_with_index do |question, index| %>
<p><%= question["question"] %></p>
<p><% question["incorrect_answers"].push(question["correct_answer"]).shuffle.each do |answer| %>
  <%= label_tag answer %>
  <%= radio_button_tag(index, answer ) %>
  <% end %>
  <%= hidden_field_tag "ultra_secret_answer_that_only_true_devs_can_see", question["correct_answer"] %>

<%end %>
<%= button_to "Submit" , questions_results_path%>
