<h1>Test your proficiency in different categories</h1>

<%= form_tag "/categories", :method => "post" do %>
<%= label_tag 'Category' %>
<%= select_tag :api_id, options_from_collection_for_select(@categories, :api_id, :category), :prompt => "Select a Category"%>
<%= submit_tag 'Select Category'%>
<% end %>
