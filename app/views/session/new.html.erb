<div class="login-page">

  <h1>Log In</h1>

  <%= form_tag login_path do %>

    <div class="alert"><p><%= flash[:error] %><p></div>


    <%= email_field_tag :email, nil,  :placeholder => "email address"%>
    <br />

    <%= password_field_tag :password, nil, :class => "form_input", :placeholder =>"password"%>
    <br />

    <%= submit_tag "Log in", :class => "submit-btn" %>

  <% end %>

</div>
