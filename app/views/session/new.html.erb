<div class="login-form-container">

  <div class="login-form">

  <h1>Log In</h1>

  <%= form_tag login_path do %>

    <div class="alert"><p><%= flash[:error] %><p></div>


    <%= email_field_tag :email, nil,  :placeholder => "email address", :class => "input-box"%>
    <br />

    <%= password_field_tag :password, nil, :class => "input-box", :placeholder =>"password"%>
    <br />

    <%= submit_tag "Log in", :class => "submit-btn" %>

  <% end %>

</div>
