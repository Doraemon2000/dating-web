<h1>Conversations</h1>

<%= link_to 'New Mail', controller: "mailboxes", action: "new", id: 2 %>



<% @conversations.each do |conversation| %>
  <p>Sender:<%= link_to "#{conversation.sender.first_name + " " + conversation.sender.last_name }" , mailbox_path(conversation.id)%>, Receiver: <%= conversation.receiver.first_name + " " + conversation.receiver.last_name %>, convo_id: <%= conversation.id %></p>

  <%= button_to 'Delete conversation', conversation_path(conversation.id), :method => 'delete' %>

<% end %>
